<%= form_with model: emoji, data: { turbo: false } do |form| %>
  <%= render "shared/error_messages", instead: emoji %>

  <div>
    <%= form.label :name %>
    <%= form.text_area :name %>
  </div>

  <div>
    <%= form.label :name_id %>
    <%= form.text_area :name_id %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.select :status, Emoji.statuses.keys.map { |k| [k, k] }, {} %>
    <%# form.select :status, Emoji.statuses.keys.map { |k| [t("activerecord.enums.emoji.status.#{k}"), k] }, {} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
